<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Cambiar contraseña</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/">Inicio</a></li>
                        <li class="breadcrumb-item active">Cambiar contraseña</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">
            <!-- Card Header -->
            <div class="card-header">

                <h3 class="card-title">
                    Información de Usuario
                </h3>
            </div>
            <!-- Card Body -->
            <div class="card-body">
                <form id="formChangePass" method="get">

                    <div class="form-group row">
                        <label for="recipient-name" class="col-sm-2 col-form-label">Usuario:
                        </label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="usuarioName" value={{ usuario.usuario }} disabled>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="recipient-name" class="col-sm-2 col-form-label">Contraseña actual:
                        </label>
                        <div class="col-sm-10">
                            <input type="password" class="form-control" id="passActual" placeholder="Ingresar la Contraseña Actual" required autofocus>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="recipient-name" class="col-sm-2 col-form-label">Nueva Contraseña:
                        </label>
                        <div class="col-sm-10">
                            <input type="password" class="form-control" id="nuevoPass" placeholder="Ingresar la Nueva Contraseña" required>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="recipient-name" class="col-sm-2 col-form-label">Repetir Nueva Contraseña:
                        </label>
                        <div class="col-sm-10">
                            <input type="password" class="form-control" id="nuevoPass2" placeholder="Repetir la Nueva Contraseña" required>
                        </div>
                    </div>
            </div>
            <div class="card-footer">
                <button type="submit" id="btnChangePass" class="btn btn-primary">Guardar 
                    <i class="fas fa-save"></i>
                </button>
                <button type="button" class="btn btn-danger float-right" onclick="location.href='/'">Regresar 
                    <i class="fas fa-undo-alt"></i>
                </button>
            </div>
            </form>
        </div>
        <!-- /.card -->
    </section>
    <!-- /.content -->
</div>