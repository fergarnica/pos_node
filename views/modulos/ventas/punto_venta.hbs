<!-- Modal -->
<div class="modal fade" id="modalAgregarCli" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background:#336699; color:white">
                <h5 class="modal-title" id="exampleModalLabel">Agregar Presentación de Producto</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="formNewClien">
                <div class="modal-body">

                    <div class="form-group">
                        <label>Nombre de Cliente:</label><label style="color:#C20F30">*</label>
                        <input type="text" class="form-control" id="nomCliente" placeholder="Ingresar Nombre de Cliente"
