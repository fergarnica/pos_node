<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Editar empleado</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Inicio</a></li>
                        <li class="breadcrumb-item active">Editar empleado</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">
            <!-- Card Header -->
            <div class="card-header">

                <h3 class="card-title">
                    <i class="fas fa-pencil-alt"></i>
                    Información Básica de Empleados
                    <small>(Los campos en rojo son requeridos)</small>
                </h3>
            </div>
            <!-- Card Body -->
            <div class="card-body">
                <form id="formEditEmpleado" method="get">

                    <div class="form-group row">
                        <label for="recipient-name" class="col-sm-2 col-form-label">ID Empleado:</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="idEmpleado" disabled>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="recipient-name" style="color:#C20F30" class="col-sm-2 col-form-label">Nombre:
                        </label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="empNombreEdit" required autofocus>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="recipient-name" style="color:#C20F30" class="col-sm-2 col-form-label">Apellido Paterno:
                        </label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="empPatEdit" required>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="recipient-name" style="color:#C20F30" class="col-sm-2 col-form-label">Apellido Materno:
                        </label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="empMatEdit" required>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="recipient-name" style="color:#C20F30" class="col-sm-2 col-form-label">E-mail:
                        </label>
                        <div class="col-sm-10">
                            <input type="email" name="email" class="form-control" id="empEmailEdit" required>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="recipient-name" style="color:#C20F30" class="col-sm-2 col-form-label">Telefono:
                        </label>
                        <div class="col-sm-10">
                            <input type="text" id="empTelEdit" class="form-control" required>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="recipient-name" style="color:#C20F30" class="col-sm-2 col-form-label">Fecha de Contratación:
                        </label>
                        <div class="col-sm-10">
                            <input class="form-control" id="fecContEdit" name="date" type="text" required>
                        </div>
                    </div>

            </div>
            <div class="card-footer">
                <button type="submit" id="btnEditEmpleado" class="btn btn-primary">Guardar 
                    <i class="fas fa-save"></i>
                </button>
                <button type="button" class="btn btn-danger float-right" onclick="location.href='/empleados'">Regresar 
                    <i class="fas fa-undo-alt"></i>
                </button>
            </div>
            </form>
        </div>
        <!-- /.card -->
    </section>
    <!-- /.content -->
</div>