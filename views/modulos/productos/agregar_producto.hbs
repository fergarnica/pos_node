            <!-- Card Body -->
            <form id="formNewProducto">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Producto Descripción:</label><label style="color:#C20F30">*</label>
                                <input class="form-control" id="nameProduct" name="producto" type="text" autofocus required>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Codigo de Barras:</label>
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-barcode"></i></span>
                                    </div>
                                    <input type="text" id="barcodeProduct" name="bar_code" class="form-control"
                                        placeholder="0DA85808DS08">
                                </div>

                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Categoria:</label><label style="color:#C20F30">*</label>
                                <select class="form-control input-lg custom-select" id="catProd" name="idcategoria" required>
                                    <option value="">Selecionar categoria</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Presentación:</label><label style="color:#C20F30">*</label>
                                <select class="form-control input-lg custom-select" id="preProd" name="idpresentacion" required>
                                    <option value="">Selecionar presentación</option>
                                </select>

                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Marca:</label><label style="color:#C20F30">*</label>
                                <select class="form-control input-lg custom-select" id="marcaProd" name="idmarca" required>
                                    <option value="">Selecionar marca de producto</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Proveedor:</label>
                                <select class="form-control input-lg custom-select" id="provProd" name="idproveedor">
                                    <option value="">Selecionar proveedor</option>
                                </select>

                            </div>
                        </div>
                    </div>
                    <hr>
                    <div class="form-group">
                        <div class="custom-control custom-switch">
                            <input type="checkbox" class="custom-control-input" id="switchProd" checked>
                            <label class="custom-control-label" for="switchProd">INVENTARIABLE</label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Stock Total:</label>
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-box"></i></span>
                                    </div>
                                    <input id="stockProd" name="stock" type="number" class="form-control"
                                        placeholder="0">
                                </div>

                            </div>
                        </div>
