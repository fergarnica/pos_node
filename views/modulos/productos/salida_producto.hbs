<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Salida de productos</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Inicio</a></li>
                        <li class="breadcrumb-item active">Salida producto</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card card-primary card-outline card-outline-tabs">
            <!-- Card Header -->
            <div class="card-header">

                <h3 class="card-title">
                    <i class="fas fa-pencil-alt"></i>
                    Registrar salida de inventario
                    <small>(Los campos con </small><small style="color:#C20F30">*</small><small> son necesarios)</small>
                </h3>
            </div>
            <!-- Card Body -->
            <form id="formSalidaProd">
                <div class="card-body">
                    <input type="hidden" id="idProduct">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label> ID Producto/Codigo de Barras:</label><label style="color:#C20F30">*</label>
                                {{!-- <select class="form-control" id="selProd" required>
                                    <option value="">Seleccionar producto...</option>
                                </select> --}}
                                <input type="text" id="idProdMov" class="form-control" autofocus>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Producto:</label>
                                <input type="text" id="descProd" class="form-control" disabled>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Motivo:</label><label style="color:#C20F30">*</label>
                                <select class="form-control input-lg custom-select" id="motSalida" required>
                                    <option value="">Selecionar motivo...</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Cantidad:</label><label style="color:#C20F30">*</label>
                                <input id="stockSalida" name="stock" type="number" min="1" class="form-control"
                                        placeholder="0" required>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- /.card -->
                <div class="card-footer">
                    <button type="submit" id="btnSalidaProd" class="btn btn-primary">Guardar
                        <i class="fas fa-save"></i>
                    </button>
                    <button type="button" class="btn btn-danger float-right"
                        onclick="location.href='/movimientos_productos'">Regresar
                        <i class="fas fa-undo-alt"></i>
                    </button>
                </div>

            </form>
    </section>
    <!-- /.content -->
</div>