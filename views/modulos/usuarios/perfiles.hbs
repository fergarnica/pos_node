<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Administrar perfiles de usuario</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/">Inicio</a></li>
                        <li class="breadcrumb-item active">Administrar perfiles de usuario</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">
            <!-- Card Header -->
            <div class="card-header">
                <button id="btn-agregar-perfil" class="btn btn-primary btn-sm card-tittle" data-toggle="modal" data-target="#modalAgregarPerfil">
                    <i class="fas fa-plus"></i> Agregar
                </button>
                <input type="hidden" value="{{permisoCrear}}" id="perfilPermCrear">
            </div>
            <!-- Card Body -->
            <div class="card-body">
                <table id="tbl-perfiles" class="table table-striped table-bordered text-center" width="100%"></table>



            </div>
