<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Agregar usuario</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/">Inicio</a></li>
                        <li class="breadcrumb-item active">Agregar usuario</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>
    <section class="content">
        <div class="card">
            <div class="card-header">

                <h3 class="card-title">
                    <i class="fas fa-pencil-alt"></i>
                    Información de Usuario
                    <small>(Los campos con </small><small style="color:#C20F30">*</small><small> son necesarios)</small>
                </h3>
            </div>
            <div class="card-body">
                <form id="formNewUser" method="get">



                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Nombre de Empleado:</label><label style="color:#C20F30">*</label>
                                <select class="form-control input-lg custom-select" id="userEmpleado" required>
                                    <option value="">Selecionar nombre de empleado</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Usuario:</label><label style="color:#C20F30">*</label>
                                <input type="text" class="form-control" id="userAlias" placeholder="Ingresar Usuario"
                                    required>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Contraseña:</label><label style="color:#C20F30">*</label>
                                <input type="password" class="form-control" id="userPass"
                                    placeholder="Ingresar contraseña" required>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Repetir Contraseña:</label><label style="color:#C20F30">*</label>
                                <input type="password" class="form-control" id="userPass2"
                                    placeholder="Repite la contraseña" required>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Perfil:</label><label style="color:#C20F30">*</label>
                                <select class="form-control input-lg custom-select" id="userPerfil" required>
                                    <option value="">Selecionar perfil</option>
                                </select>
                            </div>
                        </div>
                    </div>
            </div>
            <div class="card-footer">
                <button type="submit" id="btnCrearUser" class="btn btn-primary">Guardar
                    <i class="fas fa-save"></i>
                </button>
                <button type="button" class="btn btn-danger float-right" onclick="location.href='/usuarios'">Regresar
                    <i class="fas fa-undo-alt"></i>
                </button>
            </div>
            </form>
        </div>
    </section>
</div>