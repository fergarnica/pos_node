<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Agregar cliente</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/">Inicio</a></li>
                        <li class="breadcrumb-item active">Agregar cliente</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">
            <!-- Card Header -->
            <div class="card-header">

                <h3 class="card-title">
                    <i class="fas fa-pencil-alt"></i>
                    Información Básica de Cliente
                    <small>
                        (Los campos en rojo son requeridos)
                    </small>
                </h3>
            </div>
            <!-- Card Body -->
            <div class="card-body">
                <form id="formEditClien" method="get">

                    <div class="form-group row">
                        <label for="recipient-name" class="col-sm-2 col-form-label">ID Cliente:
                        </label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="idCliente" placeholder="Ingresar Nombre de Cliente"
                                required disabled>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="recipient-name" style="color:#C20F30"  class="col-sm-2 col-form-label">Nombre de Cliente:
                        </label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="nomEditCliente" placeholder="Ingresar Nombre de Cliente"
                                required autofocus>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="recipient-name" class="col-sm-2 col-form-label">RFC:
                        </label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="rfcEditCliente" placeholder="Ingresar RFC">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="recipient-name" class="col-sm-2 col-form-label">E-mail:
                        </label>
                        <div class="col-sm-10">
                            <input type="email" name="email" class="form-control" id="mailEditCliente"
                                placeholder="Ingresar Correo Electronico">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="recipient-name" class="col-sm-2 col-form-label">Telefono:
                        </label>
                        <div class="col-sm-10">
                            <input type="text" id="telEditCliente" class="form-control"
                                placeholder="Ingresar Número Telefonico">
                        </div>
                    </div>

            </div>
            <div class="card-footer">
                <button type="submit" id="btnEditClien" class="btn btn-primary">Guardar 
                    <i class="fas fa-save"></i>
                </button>
                <button type="button" class="btn btn-danger float-right" onclick="location.href='/clientes'">Regresar 
                    <i class="fas fa-undo-alt"></i>
                </button>
            </div>
            </form>
        </div>
        <!-- /.card -->
    </section>
    <!-- /.content -->
</div>