<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Agregar cliente</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/">Inicio</a></li>
                        <li class="breadcrumb-item active">Agregar cliente</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">
            <!-- Card Header -->
            <div class="card-header">

                <h3 class="card-title">
                    <i class="fas fa-pencil-alt"></i>
                    Información Básica de Cliente
                    <small>(Los campos con </small><small style="color:#C20F30">*</small><small> son necesarios)</small>
                </h3>
            </div>
            <!-- Card Body -->
            <div class="card-body">
                <form id="formNewClien" method="get">

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Nombre de Cliente:</label><label style="color:#C20F30">*</label>
                                <input type="text" class="form-control" id="nomCliente" placeholder="Ingresar Nombre de Cliente"
                                required autofocus>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>RFC:</label>
                                <input type="text" class="form-control" id="rfcCliente" placeholder="Ingresar RFC">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>E-mail:</label>
                                <input type="email" name="email" class="form-control" id="mailCliente"
                                placeholder="Ingresar Correo Electronico">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Telefono:</label>
                                <input type="text" id="telCliente" class="form-control"
                                placeholder="Ingresar Número Telefonico">
                            </div>
                        </div>
                    </div>

            </div>
            <div class="card-footer">
                <button type="submit" id="btnCrearClien" class="btn btn-primary">Guardar 
                    <i class="fas fa-save"></i>
                </button>
                <button type="button" class="btn btn-danger float-right" onclick="location.href='/clientes'">Regresar 
                    <i class="fas fa-undo-alt"></i>
                </button>
            </div>
            </form>
        </div>
        <!-- /.card -->
    </section>
    <!-- /.content -->
</div>