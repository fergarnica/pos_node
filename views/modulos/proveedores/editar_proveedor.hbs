<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Editar proveedor</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/">Inicio</a></li>
                        <li class="breadcrumb-item active">Editar proveedor</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">
            <!-- Card Header -->
            <div class="card-header">

                <h3 class="card-title">
                    <i class="fas fa-pencil-alt"></i>
                    Información Básica de Proveedor
                    <small>(Los campos en rojo son requeridos)
                        
                    </small>
                </h3>
            </div>
            <!-- Card Body -->
            <div class="card-body">
                <form id="formEditProv" method="get">

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>ID Proveedor:</label><label style="color:#C20F30">*</label>
                                <input type="text" class="form-control" id="idProv"  required readonly>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Empresa:</label><label style="color:#C20F30">*</label>
                                <input type="text" class="form-control" id="editProv" required autofocus
                                onkeyup="javascript:this.value=this.value.toUpperCase();">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Nombre Completo de Contacto:</label><label style="color:#C20F30">*</label>
                                <input type="text" class="form-control" id="editNomProv" required>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>RFC:</label>
                                <input type="text" class="form-control" id="editRfcProv"
                                onkeyup="javascript:this.value=this.value.toUpperCase();">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Razón Social:</label>
                                <input type="text" class="form-control" id="editRsProv"
                                onkeyup="javascript:this.value=this.value.toUpperCase();">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>E-mail:</label><label style="color:#C20F30">*</label>
                                <input type="email" name="email" class="form-control" id="provEmail" required>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Telefono:</label><label style="color:#C20F30">*</label>
                                <input type="text" id="editProvTel" class="form-control" required>
                            </div>
                        </div>
                    </div>

                    <br>
                    <hr>

                    <div class="form-group row">
                        <label for="recipient-name" class="col-sm-2 col-form-label">Dirección
                        </label>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>C.P.:</label>
                                <input type="text" class="form-control" maxlength="5"  id="editCpProv" placeholder="Ingresar Codigo Postal" autocomplete="off"
                                 onkeypress="return (event.charCode !=8 && event.charCode ==0 || (event.charCode >= 48 && event.charCode <= 57))">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Estado:</label>
                                <input type="text" class="form-control" id="editEstadoProv" readonly>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Municipio:</label>
                                <input type="text" class="form-control" id="editMunProv" readonly>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Colonia:</label>
                                <select class="form-control input-lg custom-select" id="editColProv">
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Calle:</label>
                                <input type="text" class="form-control" id="editCalleProveedor" placeholder="Ingresar Nombre de Calle" autocomplete="off">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Número:</label>
                                <input type="number" class="form-control" id="editNumCalleProv" placeholder="Ingresar Número de Calle" autocomplete="off">
                            </div>
                        </div>
                    </div>

            </div>
            <div class="card-footer">
                <button type="submit" id="btnEditProv" class="btn btn-primary">Guardar 
                    <i class="fas fa-save"></i>
                </button>
                <button type="button" class="btn btn-danger float-right" onclick="location.href='/proveedores'">Regresar 
                    <i class="fas fa-undo-alt"></i>
                </button>
            </div>
            </form>
        </div>
        <!-- /.card -->
    </section>
    <!-- /.content -->
</div>