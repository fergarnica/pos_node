<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Editar proveedor</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/">Inicio</a></li>
                        <li class="breadcrumb-item active">Editar proveedor</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">
            <!-- Card Header -->
            <div class="card-header">

                <h3 class="card-title">
                    <i class="fas fa-pencil-alt"></i>
                    Información Básica de Proveedor
                    <small>(Los campos en rojo son requeridos)
                        
                    </small>
                </h3>
            </div>
            <!-- Card Body -->
            <div class="card-body">
                <form id="formEditProv" method="get">

                    <div class="form-group row">
                        <label for="recipient-name" class="col-sm-2 col-form-label">ID Proveedor:
                        </label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="idProv" required disabled>
                        </div>
                    </div>


                    <div class="form-group row">
                        <label for="recipient-name" style="color:#C20F30"  class="col-sm-2 col-form-label">Empresa:
                        </label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="editProv" required autofocus>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="recipient-name" style="color:#C20F30" class="col-sm-2 col-form-label">Nombre Completo de Contacto:
                        </label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="editNomProv" required>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="recipient-name" class="col-sm-2 col-form-label">RFC:
                        </label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="editRfcProv">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="recipient-name" class="col-sm-2 col-form-label">Razón Social:
                        </label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="editRsProv">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="recipient-name" style="color:#C20F30" class="col-sm-2 col-form-label">E-mail:
                        </label>
                        <div class="col-sm-10">
                            <input type="email" name="email" class="form-control" id="provEmail" required>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="recipient-name" style="color:#C20F30" class="col-sm-2 col-form-label">Telefono:
                        </label>
                        <div class="col-sm-10">
                            <input type="text" id="editProvTel" class="form-control" required>
                        </div>
                    </div>
                    <br>
                    <hr>
                    <div class="form-group row">
                        <label for="recipient-name" class="col-sm-2 col-form-label">Dirección
                        </label>
                    </div>

                    <div class="form-group row">
                        <label for="recipient-name" class="col-sm-2 col-form-label">Calle:
                        </label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="editCalleProveedor">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="recipient-name" class="col-sm-2 col-form-label">Número:
                        </label>
                        <div class="col-sm-10">
                            <input type="number" class="form-control" id="editNumCalleProv">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="recipient-name" class="col-sm-2 col-form-label">Colonia:
                        </label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="editColProv">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="recipient-name" class="col-sm-2 col-form-label">Municipio:
                        </label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="editMunProv">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="recipient-name" class="col-sm-2 col-form-label">Estado:
                        </label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="editEstadoProv">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="recipient-name" class="col-sm-2 col-form-label">C.P.:
                        </label>
                        <div class="col-sm-10">
                            <input type="number" class="form-control" maxlength="5" oninput="if(this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);" id="editCpProv">
                        </div>
                    </div>

            </div>
            <div class="card-footer">
                <button type="submit" id="btnEditProv" class="btn btn-primary">Guardar 
                    <i class="fas fa-save"></i>
                </button>
                <button type="button" class="btn btn-danger float-right" onclick="location.href='/proveedores'">Regresar 
                    <i class="fas fa-undo-alt"></i>
                </button>
            </div>
            </form>
        </div>
        <!-- /.card -->
    </section>
    <!-- /.content -->
</div>